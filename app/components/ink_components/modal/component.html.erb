<!-- Modal toggle -->
<%= helpers.button_component(
	builder: :button_tag,
	size: :md,
	data: { "modal-target" => modal_id,
			    "modal-toggle" => modal_id
		  },
) { "Abrir modal" }  %>

<!-- Main modal -->
<%= content_tag :div, '', id: modal_id, tabindex: -1, 
                data: { modal_backdrop: style(type:),
				        modal_placement: style(placement:)}, 
                aria: { hidden: 'true' },
				role: 'dialog',
                class: 'hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full' do %>

	<%= content_tag :div, class: "relative p-4 max-h-full #{style(size:)}" do %>
		<!-- Modal content -->
		<%= content_tag :div, class: "w-full relative bg-white rounded-lg shadow" do %>
		
			<!-- Modal header -->
			<%= header %>

			<!-- Modal body -->
			<%= body %>

			<!-- Modal footer -->
			<%= footer %>
		<% end %>
	<% end %>
<% end %>