<h1>Com form builder</h1>

<%= form_with model: @user, builder: InkComponents::FormBuilder do |f| %>
  <%= f.label :name, data: { controller: "test" } %>
  <%= f.text_field :name %>
  <%= f.error_message :name %>

  <br><br>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <br><br>

  <%= f.label :full_name do %>
    Nome completo
    <%= f.text_field :full_name %>
  <% end %>

  <br><br>

  <div class="flex mb-4">
    <%= f.check_box :paid %>
    <%= f.label :paid, class: "mb-0" %>
  </div>

  <%= f.submit %>

  <br><br>

  <%= f.submit class: "flex items-center gap-2" do %>
    <%= icon_component(name: :github, class: "size-3") %>
    Salvar
  <% end %>
<% end %>
