<h1>Sem form builder:</h1>

<%= form_with model: @user do |f| %>
  <%= f.label :name, data: { controller: "test" } %>
  <%= f.text_field :name %>

  <br><br>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <br><br>

  <div class="flex">
    <%= f.check_box :paid %>
    <%= f.label :paid, class: "mb-0" %>
  </div>

  <br><br>

  <%= f.label :age %>
  <%= f.number_field :age, min: 10 %>

  <br>
  <div>
    <div>
      <%= f.radio_button :type, :admin %>
      <%= f.label :type_admin %>
    </div>
    <div>
      <%= f.radio_button :type, :tester %>
      <%= f.label :type_tester %>
    </div>
    <div>
      <%= f.radio_button :type, :guest_user %>
      <%= f.label :type_guest_user %>
    </div>
  </div>

  <%= f.submit %>
<% end %>

