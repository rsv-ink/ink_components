<h1>Sem form builder:</h1>

<%= form_with model: @user do |f| %>
  <%= f.label :name, data: { controller: "test" } %>
  <%= f.text_field :name %>

  <br><br>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <br><br>

  <div class="flex">
    <%= f.check_box :paid %>
