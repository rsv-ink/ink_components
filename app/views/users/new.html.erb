  <br><br>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <br><br>
  <%= f.label :description %>
  <%= f.text_area :description, cols: 20, rows: 2 %>
  <br><br>

  <div class="flex mb-4">
    <%= f.check_box :paid %>
    <%= f.label :paid, class: "mb-0" %>
  </div>

  <%= f.submit %>
<% end %>
