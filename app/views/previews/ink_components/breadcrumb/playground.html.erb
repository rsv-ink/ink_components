<%= breadcrumb_component(background:) do |breadcrumb| %>
  <%= breadcrumb.with_list do |list| %>
    <% list_name[0..-2].each do |name| %>
      <%= list.with_item(href: "#") do |item|%>
        <%= name %>
        <%= item.with_next_page %>
      <% end %>
    <% end %>
    <% list_name[-1..-1].each do |name| %>
      <%= list.with_item(href: "#") do %>
        <%= name %>
      <% end %>
    <% end %>
  <% end %>
<% end %>