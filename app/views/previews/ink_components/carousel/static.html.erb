<%= carousel_component(slider: :static, class: "w-56 h-56") do |carousel| %>
  <% carousel.with_wrapper(class: "w-56 h-56") do |wrapper| %>
    <% wrapper.with_item(class: "w-full h-full") do %>
      <img src="https://i.pravatar.cc/150?img=1" class="w-full h-full" alt="">
    <% end %>
    <% wrapper.with_item(class: "w-full h-full") do %>
      <img src="https://i.pravatar.cc/150?img=2" class="w-full h-full" alt="">
    <% end %>
  <% end %>
  <% carousel.with_prev_button do |button| %>
    <% button.with_icon_container do %>
      <%= render InkComponents::Icon::Component.new(
        name: "chevron-left",
        type: :outline,
        class: "w-12 h-12 text-white dark:text-gray-800"
      ) %>
    <% end %>
  <% end %>
  <% carousel.with_next_button do |button| %>
    <% button.with_icon_container do %>
      <%= render InkComponents::Icon::Component.new(
        name: "chevron-right",
        type: :outline,
        class: "w-12 h-12 text-white dark:text-gray-800"
      ) %>
    <% end %>
  <% end %>
  <% carousel.with_indicators_container do |indicator| %>
    <% 2.times do |index| %>
      <% indicator.with_item(index:) %>
    <% end %>
  <% end %>
<% end %>
